<Window x:Class="ZFreeGo.Monitor.AutoStudio.Secure.AuthoritySettingUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthoritySettingUI" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <StackPanel Margin="3" Orientation="Horizontal">
                    <Button Margin="3,3,3,0" Padding="3" Height="28" VerticalAlignment="Top" Name="btnRefresh" Click="btnRefresh_Click">刷新</Button>
             
                </StackPanel>
            </Grid>
            <DataGrid Grid.Row="2" Margin="5" AutoGenerateColumns="False" Name="gridControl">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="元素名称"   Binding="{Binding  ElementName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="最小权限"     Binding="{Binding MinLevel}"></DataGridTextColumn>
                    <DataGridTextColumn Header="ToString()"    Binding="{Binding ToStr}"></DataGridTextColumn>
             </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
